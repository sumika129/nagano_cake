<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>注文履歴一覧</h2>
        <table>
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order.id) %></td>
              <td><%= order.name %></td>
              <td>
                <%# order.oeder_details.each do |oeder_detail| %>
                <%#= oeder_detail.amount %>
                <%# end %>
                <%= order.oeder_details.sum(:amount) %>
              </td>
              <td><%= order.status_i18n %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>