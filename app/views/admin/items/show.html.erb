<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h2>商品詳細</h2>
      <table>
        <thead>
          <tr>
            <th>商品画像</th>
            <th>商品名</th>
            <th>商品説明</th>
            <th>ジャンル</th>
            <th>税込価格(税抜価格)</th>
            <th>販売ステータス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= image_tag @item.get_image(100,100) %></td>
            <td><%= link_to @item.name, edit_admin_item_path(@item) %></td>
            <td><%= @item.introduction %></td>
            <td><%= @item.genre_id %></td>
            <td><%= @item.price %>円</td>
            <td><%= @item.is_active %></td>
            <td><%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-sm btn-success" %></td>
          </tr>
        </tbody>
      </table>
  
    </div>
  </div>
</div>
