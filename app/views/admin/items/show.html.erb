<div class="container">
  <div class="row">
    <div class="col-sm-5 col-md-3 col-lg-2 px-5 px-sm-0 mx-auto">

    <h2>商品詳細</h2>
      <%= image_tag @item.get_image(100,100) %>
    </div>
    <div class="col-sm-7 col-md-5 col-lg-3 px-5 px-sm-0 mx-auto">
      <table>
          <tr>
            <th>商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @genre.name %></td>
          </tr>
          <tr>
            <th>税込価格(税抜価格)</th>
            <td><%= @item.with_tax_price %>(<%= @item.price %>)円</td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <% if @item.is_active %>
            <td>販売中</td>
            <% else %>
            <td>販売停止中</td>
            <% end %>
            </tr>
          <td><%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-sm btn-success" %></td>
      </table>
    </div>
  </div>
</div>
