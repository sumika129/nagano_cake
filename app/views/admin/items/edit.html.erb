<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h2>商品編集</h2>
      <%= form_with model: [:admin,@item] do |f| %>
        <h4>商品名</h4>
        <%= f.text_field :name %>
        <h4>商品説明</h4>
        <%= f.text_area :introduction %>
        <h4>価格（税抜）</h4>
        <%= f.text_field :price %>

        <%= f.submit 'Update item', class:"btn btn-success" %><br/>
        <%= link_to "Back", admin_item_path %>

      <% end %>

    </div>
  </div>
</div>


