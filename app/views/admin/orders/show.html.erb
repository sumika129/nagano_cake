<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>注文履歴詳細</h2>
      <table>
        <tr>
          <th>購入者</th>
          <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.postal_code %><%= @order.address %><br><%= @order.name %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td><%#= f.select :@order.status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %></td>
        </tr>
      </table>

      <table border="1" style="border-collapse: collapse">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @oeder_detail.each do |oeder_detail| %>
          <tr>
            <td><%= oeder_detail.item.name %></td>
            <td><%= oeder_detail.price %></td>
            <td><%= oeder_detail.amount %></td>
            <td><%= oeder_detail.price * oeder_detail.amount %></td>
            <td></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @order.billing_amount - @order.postage %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @order.billing_amount %></td>
        </tr>
      </table>

    </div>
  </div>
</div>
