<div class="col-md-8 offset-md-1">
<%= form_with model: @genre do |f| %>
  <h4>ジャンル名</h4>
    <%= f.text_field :genre_name %>
  <%= f.submit 'Create Genre', class:"btn btn-success" %>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>ジャンル</h2>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>ジャンル名</th>
        </tr>
      </thead>
      <% @genres.each do |genre| %>
      <tbody>
        <tr>
          <td><%= genre_name %></td>
          <td><%= link_to "Edit", edit_admin_path(@genre), class:"btn btn-sm btn-success" %></td>
          <td><%= @genre.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td><%= @genre.updated_at.strftime('%Y/%m/%d %H:%M') %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
</div>