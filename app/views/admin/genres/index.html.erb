<div class="col-md-8 offset-md-1">
<h2>ジャンル一覧・追加</h2><br>
<%= form_with model: [:admin,@genre] do |f| %>
  <h4>ジャンル名</h4>
    <%= f.text_field :name %>
  <%= f.submit '新規登録', class:"btn btn-success" %>
<% end %>
</div>
<br>
<div class="col-md-8 offset-md-1">
    <table>
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <% @genres.each do |genre| %>
      <tbody>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-sm btn-success" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
</div>