<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h1>Editing Genre</h1>

    <%= form_with model: [:admin,@genre] do |f| %>
      <h4>ジャンル名</h4>
      <%= f.text_field :genre_name %>
      <%= f.submit 'Update Genre', class:"btn btn-success" %><br/>
    <% end %>
    
    <div class="col-md-8 offset-md-1">
      <h2>ジャンル一覧</h2>
        <table>
          <thead>
            <tr>
              <th></th>
              <th>ジャンル名</th>
            </tr>
          </thead>
          <% @genres.each do |genre| %>
          <tbody>
            <tr>
              <td><%= genre_name %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
