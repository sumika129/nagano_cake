<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>会員情報編集</h1>
      <%= form_with model: [:admin,@customer] do |f| %>
      <table>
        <tr>
          <th>会員ID</th>
          <td><%= f.text_field :id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td><%= f.radio_button :is_deleted, :true %>　<%= f.label :is_deleted, "退会" %>
      　       <%= f.radio_button :is_deleted, :false %>　<%= f.label :is_deleted, "有効" %></td>
        </tr>
          <td><%= f.submit '変更を保存', class:"btn btn-success" %></td>
      </table>
    <% end %>
    </div>
  </div>
</div>
