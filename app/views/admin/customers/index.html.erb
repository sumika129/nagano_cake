<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>会員一覧</h2>
        <table>
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <% @customer.each do |customer| %>
          <tbody>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.last_name, admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted %>
              <td>退会</td>
              <% else %>
              <td>有効</td>
              <% end %>
            </tr>
          </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>