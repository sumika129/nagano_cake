<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>顧客一覧</h2>
        <table>
          <thead>
            <tr>
              <th>会員名</th>
            </tr>
          </thead>
          <% @customer.each do |customer| %>
          <tbody>
            <tr>
              <td><%= link_to customer.last_name, customer.first_name, customer_path(@customer.id) %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>