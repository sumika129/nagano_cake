<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

     <h1>注文履歴一覧</h1>
     <table border="1" style="border-collapse: collapse">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <% @order.each do |order| %>
        <tbody>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= order.postal_code %><%= order.address %><br><%= order.name %></td>
            <td>
              <% order.oeder_details.each do |oeder_detail| %>
              <%= oeder_detail.item.name %>
              <% end %>
            </td>
            <td><%= order.billing_amount %></td>
            <td><%= order.status_i18n %></td>
            <td><%= link_to "表示する", public_order_path(order.id), class:"btn btn-sm btn-primary" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>

     </div>
  </div>
</div>