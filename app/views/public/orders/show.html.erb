<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>注文履歴詳細</h1>
      <h4>注文情報</h4>
      <table border="1" style="border-collapse: collapse">
        <thead>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </thead>
      </table>
      <br>
      <h4>請求情報</h4>
      <table border="1" style="border-collapse: collapse">
        <thead>
          <tr>
            <th>商品合計</th>
            <td><%= @order.billing_amount - @order.postage %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @order.billing_amount %></td>
          </tr>
        </thead>
      </table>
      <br>
      <h4>注文内容</h4>
      <table border="1" style="border-collapse: collapse">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @oeder_detail.each do |oeder_detail| %>
          <tr>
            <td><%= oeder_detail.item.name %></td>
            <td><%= oeder_detail.price %></td>
            <td><%= oeder_detail.amount %></td>
            <td><%= oeder_detail.price * oeder_detail.amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
