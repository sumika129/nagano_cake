<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <table border="1" style="border-collapse: collapse">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
        <% @genre.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-8 offset-md-1">
      <%= image_tag @item.get_image(100,100) %>
      <table>
        <tr>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>¥<%= @item.price %>(税込)</td>
        </tr>
      </table>
      <%= form_with model: @cart_item, url:public_cart_items_path,method: :post, local: true do |f| %>
        <%= f.select :amount, *[1..5],  {prompt: "個数選択"}%>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit "カートに入れる", class:"btn btn-sm btn-success" %>
      <% end %>
    </div>
  </div>
</div>

