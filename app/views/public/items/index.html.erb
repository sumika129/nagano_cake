<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <% @genre.each do |genre| %>
      <table border="1" style="border-collapse: collapse">
         <tr>
          <th>ジャンル検索</th>
         </tr>
         <tr>
           <td><%= genre.name %></td>
         </tr>
      </table>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>商品一覧</h2>
      <table>
        <% @item.each do |item| %>
        <tr>
          <td><%= image_tag item.get_image(100,100) %></td>
          <td><%= link_to item.name, public_item_path(item) %></td>
          <td><%= item.price %>円</td>
        </tr>
        <% end %>
        <%= paginate @item %>
      </table>
    </div>
  </div>
</div>
