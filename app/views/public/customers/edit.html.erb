<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h1>登録情報編集</h1>
    <%= form_with model: [:public,@customer] do |f| %>
      <h4>郵便番号</h4>
      <%= f.text_field :postal_code %>
      <h4>住所</h4>
      <%= f.text_field :address %>
      <h4>電話番号</h4>
      <%= f.text_field :telephone_number %>
      <%= f.submit 'アップデート', class:"btn btn-success" %>
    <% end %>
    </div>
  </div>
</div>