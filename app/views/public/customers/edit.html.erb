<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h1>登録情報編集</h1>
    <%= form_with model: [:public,@customer] do |f| %>
      <h4>姓</h4>
      <%= f.text_field :last_name %>
      <h4>姓（カナ）</h4>
      <%= f.text_field :last_name_kana %>
      <h4>名</h4>
      <%= f.text_field :first_name %>
      <h4>名（カナ）</h4>
      <%= f.text_field :first_name_kana %>
      <h4>メールアドレス</h4>
      <%= f.text_field :email %>
      <h4>郵便番号</h4>
      <%= f.text_field :postal_code %>
      <h4>住所</h4>
      <%= f.text_field :address %>
      <h4>電話番号</h4>
      <%= f.text_field :telephone_number %><br>
      <h4></h4>
      <%= f.submit 'アップデート', class:"btn btn-success" %>
    <% end %>
    </div>
  </div>
</div>