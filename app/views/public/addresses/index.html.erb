<div>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>配送先登録</h2>
        <%= form_with model: [:public,@address] do |f| %>
        <th>郵便番号(ハイフンなし)</th>
          <td><%= f.text_field :postal_code %></td><br>
        <th>住所</th>
          <td><%= f.text_field :address %></td><br>
        <th>宛名</hth>
          <td><%= f.text_field :name %></td><br>
        <%= f.submit '新規登録', class:"btn btn-success" %>
      <% end %>

      <div class="col-md-8 offset-md-1">
      <h2>配送先一覧</h2>
        <table border="1" style="border-collapse: collapse">
          <thead>
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
            </tr>
          </thead>
          <% @addresses.each do |address| %>
          <tbody>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td><%= link_to "編集する", edit_public_address_path(address), class:"btn btn-sm btn-success" %>
                  <%= link_to "削除する", public_address_path(address), method: :delete, class:"btn btn-sm btn-danger", "data-confirm" => "本当に消しますか?" %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
